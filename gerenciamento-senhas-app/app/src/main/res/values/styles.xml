<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/darkgrey</item>
    </style>


    <style name="EditTextAlterPwLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:theme">@style/editTextTheme</item>

    </style>

    <style name="editTextTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorBrightCyan</item>
        <item name="colorPrimaryDark">@color/colorBrightCyan</item>
        <item name="colorAccent">@color/colorBrightCyan</item>
    </style>

    <style name="ButtonWhite">
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/bg_bt_simple_ripple_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorGrayAlpha</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputLayoutRegister">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/act_register_ht_size</item>
        <item name="android:textColor">@color/colorTextTitle</item>
    </style>

    <style name="AppTheme.GerenciadorTextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColorHint">@color/colorGrayHint</item>
        <item name="android:textColor">@color/colorGrayHint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextApp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorVeryDarkGray</item>
        <item name="android:theme">@style/editTextTheme</item>

    </style>

    <style name="ViewLineRegister">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:background">@drawable/bg_view_line_gray</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ButtonRed">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bg_button_red</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/DIN-Medium.ttf</item>
    </style>
</resources>
